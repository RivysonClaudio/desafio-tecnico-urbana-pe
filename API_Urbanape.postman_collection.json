{
	"info": {
		"_postman_id": "urbanape-api-collection",
		"name": "API Urbanape",
		"description": "Collection para API do desafio técnico Urbanape",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.collectionVariables.set(\"token\", jsonData.token);",
									"        console.log(\"Token salvo automaticamente: \" + jsonData.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"Senha123@\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Authenticates a user and returns a JWT token. The token is automatically saved to the collection variable 'token' for use in subsequent requests."
					},
					"response": []
				},
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"João Silva\",\n    \"email\": \"joao@example.com\",\n    \"password\": \"Senha123@\",\n    \"role\": \"USER\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "register"]
						},
						"description": "Registers a new user. Requires ADMIN role. Password must contain at least 8 characters, one uppercase, one lowercase, one number, and one special character. Valid roles: ADMIN, USER."
					},
					"response": []
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "List All Users (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/users?page=0&size=10&sort=id,asc",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "users"],
							"query": [
								{
									"key": "search",
									"value": "",
									"description": "Optional: Search users by name or email (case-insensitive). If not provided, returns all users.",
									"disabled": true
								},
								{
									"key": "page",
									"value": "0",
									"description": "Page number (0-indexed)"
								},
								{
									"key": "size",
									"value": "10",
									"description": "Number of items per page"
								},
								{
									"key": "sort",
									"value": "id,asc",
									"description": "Sort field and direction (e.g., id,asc or name,desc)"
								}
							]
						},
						"description": "Returns a paginated list of all users. Optionally filter by name or email using the 'search' query parameter. Requires ADMIN role."
					},
					"response": []
				},
				{
					"name": "Get Me",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/users/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "users", "me"]
						},
						"description": "Returns the authenticated user's information including their cards."
					},
					"response": []
				},
				{
					"name": "Get User by ID (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "users", "1"]
						},
						"description": "Returns a specific user by ID. Requires ADMIN role. Replace '1' with the actual user ID."
					},
					"response": []
				},
				{
					"name": "Update User (Admin)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Nome Atualizado\",\n    \"email\": \"novoemail@example.com\",\n    \"role\": \"ADMIN\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "users", "1"]
						},
						"description": "Updates a user. All fields are optional. Requires ADMIN role. Replace '1' with the actual user ID."
					},
					"response": []
				},
				{
					"name": "Delete Users (Admin)",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"ids\": [2, 3]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "users"]
						},
						"description": "Soft deletes multiple users by their IDs. Also soft deletes all cards belonging to these users. Requires ADMIN role."
					},
					"response": []
				}
			]
		},
		{
			"name": "Cards",
			"item": [
				{
					"name": "Get My Cards",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/cards/me?page=0&size=10&sort=number,asc",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "cards", "me"],
							"query": [
								{
									"key": "page",
									"value": "0",
									"description": "Page number (0-indexed)"
								},
								{
									"key": "size",
									"value": "10",
									"description": "Number of items per page"
								},
								{
									"key": "sort",
									"value": "number,asc",
									"description": "Sort field and direction (e.g., number,asc or number,desc)"
								}
							]
						},
						"description": "Returns a paginated list of cards belonging to the authenticated user."
					},
					"response": []
				},
				{
					"name": "Get My Card by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/cards/me/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "cards", "me", "1"]
						},
						"description": "Returns a specific card by its ID (card number, which is the primary key) that belongs to the authenticated user. Replace '1' with the actual card number/ID."
					},
					"response": []
				},
				{
					"name": "List All Cards (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/cards?page=0&size=10&sort=number,asc",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "cards"],
							"query": [
								{
									"key": "page",
									"value": "0",
									"description": "Page number (0-indexed)"
								},
								{
									"key": "size",
									"value": "10",
									"description": "Number of items per page"
								},
								{
									"key": "sort",
									"value": "number,asc",
									"description": "Sort field and direction (e.g., number,asc or number,desc)"
								},
								{
									"key": "user",
									"value": "",
									"description": "Optional: Filter cards by user ID. If not provided, returns all cards.",
									"disabled": true
								}
							]
						},
						"description": "Returns a paginated list of all cards. Optionally filter by user ID using the 'user' query parameter. Requires ADMIN role."
					},
					"response": []
				},
				{
					"name": "Get Card by ID (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/cards/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "cards", "1"]
						},
						"description": "Returns a specific card by its ID (card number, which is the primary key). Requires ADMIN role. Replace '1' with the actual card number/ID."
					},
					"response": []
				},
				{
					"name": "Create Card (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": 1,\n    \"title\": \"Cartão Principal\",\n    \"type\": \"COMUM\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/cards",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "cards"]
						},
						"description": "Creates a new card. The card number is automatically generated. Valid types: COMUM, ESTUDANTE, TRABALHADOR. Requires ADMIN role."
					},
					"response": []
				},
				{
					"name": "Update Card (Admin)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Cartão Estudantil\",\n    \"status\": true,\n    \"type\": \"ESTUDANTE\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/admin/cards/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "admin", "cards", "1"]
						},
						"description": "Updates a card by its ID (card number, which is the primary key). All fields (title, status, type) are optional. Valid types: COMUM, ESTUDANTE, TRABALHADOR. Requires ADMIN role. Replace '1' with the actual card number/ID."
					},
					"response": []
				},
				{
